@model ContatoModelcs
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="cliente">Cliente</label>
        <input type="text" asp-for="Cliente" class="form-control" placeholder="Digite o nome do cliente">
        @Html.ValidationMessageFor(x => x.Cliente)
    </div>

    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="number" asp-for="Cpf" class="form-control" placeholder="Digite o cpf">
        @Html.ValidationMessageFor(x => x.Cpf)
    </div>

    <div class="form-group">
        <label for="datanasc">Data de Nascimento</label>
        <input type="text" asp-for="DataNasc" class="form-control" placeholder="Digite a data de nascimento">
        @Html.ValidationMessageFor(x => x.DataNasc)
    </div>

    <div class="form-group">
        <label for="estado">Estado</label>
        <input type="text" asp-for="Estado" class="form-control" placeholder="Digite o estado">
        @Html.ValidationMessageFor(x => x.Estado)
    </div>

    <div class="form-group">
        <label for="cidade">Cidade</label>
        <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite a cidade">
        @Html.ValidationMessageFor(x => x.Cidade)
    </div>
    <div class="form-group">
        <label for="sexo">Sexo</label>
        <input type="text" asp-for="Sexo" class="form-control" placeholder="Digite o sexo">
        @Html.ValidationMessageFor(x => x.Sexo)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>